<UserControl
    x:Class="PribliznyCas_Uni.Tiles.MediumTileTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PribliznyCas_Uni.Tiles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Name="MediumTile"
    d:DesignHeight="194"
    d:DesignWidth="194">

    <Canvas Width="194" Height="194">
        <Grid x:Name="LayoutRoot" Width="194" Height="194">
            <Rectangle Width="194" Height="194" Fill="Green" />
            <TextBlock x:Name="textTime" FontWeight="Bold" Text="{Binding TimeText, ElementName=MediumTile}"
                   Foreground="White" FontSize="36"
                   Margin="0,0,0,0"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextAlignment="Center" TextLineBounds="Full"
                   TextWrapping="WrapWholeWords"/>
        </Grid>
    </Canvas>
</UserControl>
